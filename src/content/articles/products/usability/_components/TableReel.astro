---
import { TableReel as OriginalTableReel } from 'smarthr-ui';
---

<OriginalTableReel className="tableReel">
  <slot />
</OriginalTableReel>

<style lang="scss">
  .tableReel {
    margin-block-start: 20px;
    @include breakpointMobile3 {
      margin-right: -40px;
      margin-left: -40px;
    }
    & table {
      width: 150%;
      margin-block-start: 0;
      @include breakpointMobile3 {
        width: 250svw;
      }
    }
    & th,
    & td {
      min-width: initial;
      border: none;
      box-sizing: content-box;
      font-size: var(--font-size-14);
    }
  }
</style>
